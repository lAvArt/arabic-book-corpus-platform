{
  "name": "arabic-book-corpus-platform",
  "version": "0.1.0",
  "private": true,
  "description": "Standalone OCR-first Arabic book corpus platform with citation-grade search APIs",
  "packageManager": "pnpm@10.6.2",
  "scripts": {
